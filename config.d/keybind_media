bindsym Mod3+f7 exec playerctl previous
bindsym Mod3+f8 exec playerctl play-pause
bindsym Mod3+f9 exec playerctl next

# volume
# show volume UI using avizo
# https://github.com/misterdanb/avizo
# 20210615 volumectl -> volctl.sh (modified amixer -> pamixer)
# 
exec_always avizo-service
bindsym Mod3+f10 exec ~/dotfiles/sway/scripts/volctl.sh lower
bindsym Mod3+f11 exec ~/dotfiles/sway/scripts/volctl.sh raise
bindsym Mod3+f12 exec ~/dotfiles/sway/scripts/volctl.sh mute
bindsym $mod+f10 exec ~/dotfiles/sway/scripts/volctl.sh lower
bindsym $mod+f11 exec ~/dotfiles/sway/scripts/volctl.sh raise
bindsym $mod+f12 exec ~/dotfiles/sway/scripts/volctl.sh mute

